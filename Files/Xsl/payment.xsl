<?xml version="1.0" encoding="UTF-8"?>
<xsl:stylesheet xmlns:xsl="http://www.w3.org/1999/XSL/Transform" version="1.0">
    <xsl:output method="html"/>
    <xsl:template match="/">
        <html>
            <head>
                <title>Payment</title>
                <style>
                    table {
                    text-align: center;
                    border-collapse: collapse;
                    width: 100%;
                    font-family: Calibri, sans-serif;
                    }

                    th, td {
                    background-color:white;
                    padding: 8px;
                    border: 1px solid black;
                    }

                    th { 
                    font-weight: bold;
                    }

                    h2, small {
                    font-family: Calibri, sans-serif;
                    }
                    
                    small{
                    font-weight: bold;
                    }
                </style>
            </head>
            <body>
                <h2>Payment</h2>
                <table border="1">
                    <tr>
                        <th>ID</th>
                        <th>Payment Date</th>
                        <th>User</th>
                        <th>Card Number</th>
                    </tr>
                    <xsl:for-each select="Payment/payment">
                        <tr>
                            <td>
                                <xsl:value-of select="id"/>
                            </td>
                            
                            <td>
                                <xsl:value-of select="date"/>
                            </td>
                            
                            <td>
                                <xsl:value-of select="user"/>
                            </td>
                            
                            <td>
                                <xsl:value-of select="card"/>
                            </td>
                        </tr>
                    </xsl:for-each>
                </table>
                <footer>
                    <small>Generated by Japanese Online Ticketing System</small>
                </footer>
            </body>
        </html>
    </xsl:template>

</xsl:stylesheet>
